<div class="container">
  <div class="row">
    <h2> Your Matches! </h2>
  </div>
  <div class="row">
    <table class="table">
      <% @matches.each do |match| %>
      <tr>
        <td>
          <% if match.sender_id == session['current_locu_id'] %>
            <%= link_to User.get_name(match.receiver_id), messages_path(locu_id: match.receiver_id) %> 
          <% else %>
            <%= link_to User.get_name(match.sender_id), messages_path(locu_id: match.sender_id) %>
          <% end %>
          <span style="padding-left:3%">Unread Messages: <%= match.unread_messages_for_user(session['current_locu_id']).count %></span>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
