<!DOCTYPE html>
<html>
<head>
  <title>Get Matched</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
          <a href="../" class="navbar-brand">Get Matched</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            
            <li>
              <%=link_to "About", "welcome#about" %>
            </li>
            <li>
              <%=link_to "Team", "welcome#team" %>
            </li>
            <li>
              <%=link_to "Contact", "welcome#contact" %>
            </li>
            
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Log In", "#", :id=>"login"%></li>
            <li><%= link_to "Sign Up", "#", :id=>"signup"%></li>
          </ul>
        </div>
    </div>
</div>
<%= link_to 'Inbox', messages_path  %> |
  <%= link_to 'Send message', new_message_path  %> |
  <div class="container">
  <div class="row" id="inboxMessages">
    <h2>Inbox</h2>
    <table class="table">
      <tr>
        <td></td>
        <td>From</td>
        <td>Date</td>
        <td></td>
      </tr>
    </table>
    <div id="messages">
      <%= render @messages %> 
    </div>
  </div>
</div>

<div class="container">
  <div class="row" id="sentMessages">
    <h2>Sent Messages</h2>
    <table class="table">
      <tr>
        <td>From</td>
        <td>To</td>
        <td>Date</td>
        <td>Delete?</td>
      </tr>
    </table>
    <div id="messages">
      <%= render 'messages/sent' %> 
    </div>
  </div>
</div>

<%= bootstrap_flash %>
<%= yield %>

</body>
</html>