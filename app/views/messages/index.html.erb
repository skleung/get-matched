<%= link_to 'Inbox', messages_path  %> |
  <%= link_to 'Send message', new_message_path  %> |
  <div class="container">
  <div class="row" id="inboxMessages">
    <h2>Inbox</h2>
    <table class="table">
      <tr>
        <td></td>
        <td>From</td>
        <td>Date</td>
        <td></td>
      </tr>
    </table>
    <div id="messages">
      <%= render @messages %> 
