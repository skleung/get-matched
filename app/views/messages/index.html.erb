  </div>
</div>

<div class="container">
  <div class="row" id="sentMessages">
    <h2>Sent Messages</h2>
    <table class="table">
      <tr>
        <td>From</td>
        <td>To</td>
        <td>Date</td>
        <td>Delete?</td>
      </tr>
    </table>
    <div id="messages">
      <%= render 'messages/sent' %> 
    </div>
  </div>
</div>