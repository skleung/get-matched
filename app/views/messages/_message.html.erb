<link href="/assets/messages.css" rel="stylesheet">

<link href="/assets/bootstrap.css" rel="stylesheet">
<% if message.receiver_id == @user.id %>
<table class="table">
  <tr>
    <td>
      <%= link_to User.where(id: message.sender_id).first.username, message_path(message) %>
    </td>
    <td>
      <%= User.where(id: message.receiver_id).first.username %>
    </td>
    <td>
      <%= message.created_at %>
    </td>
    <td><%= link_to 'Delete Message', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
</table>
<% end %>