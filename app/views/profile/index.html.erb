<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Your Profile</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Business Name:
    </div>
    <div class="col-md-6">
      <%= @business['name'] %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Username:
    </div>
    <div class="col-md-6">
      <%= User.get_name(session['current_locu_id']) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Locu Id:
    </div>
    <div class="col-md-6">
      <%= session['current_locu_id'] %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Categories Chosen:
    </div>
    <div class="col-md-6">
      <% @business['categories'].each do |category| %>
        <%= category['name'] %>, 
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <%= link_to 'Edit Categories', profile_edit_path, :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
