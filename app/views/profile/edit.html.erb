<%= render 'profile/profile' %>

      <div class="row">
        <div class="col-md-4">
          Categories To Choose (separated by commas):
        </div>
        <div class="col-md-6">
        <input type="textarea" name="category_update" action="submit"
               value="<% @business['categories'].each do |category| %> <%= category['str_id'] %>, <% end %>"/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-4">
          <%= link_to 'Save', profile_path, :class => 'btn btn-success', :action => :submit %>
          <%= link_to 'Cancel', profile_path, :class => 'btn btn-primary' %>
        </div>
      </div>

    </div>
  </div>
</div>
