<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Your Profile</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Business Name:
    </div>
    <div class="col-md-6">
      <%= @business['name'] %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Username:
    </div>
    <div class="col-md-6">
      <%= User.get_name(session['current_locu_id']) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Locu Id:
    </div>
    <div class="col-md-6">
      <%= session['current_locu_id'] %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      Categories To Choose (separated by commas):
    </div>
    <div class="col-md-6">
      <input type="textarea" name="category_update" action="submit"></input>
      
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <%= link_to 'Save', profile_path, :class => 'btn btn-success', :action => :submit %>
      <%= link_to 'Cancel', profile_path, :class => 'btn btn-primary' %>
    </div>
  </div>
</div>