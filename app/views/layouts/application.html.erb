<!DOCTYPE html>
<html>
<head>
  <title>Get Matched</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
          <%=link_to "Get Matched", root_url, class: "navbar-brand" %>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Home", "/" %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">

          <% if logged_in?%>
            <li><%= link_to "Welcome, " + User.get_name(session['current_locu_id']), "#"%></li>
            <li><%= link_to "Messages", messages_path, :id=>"messages"%></li>
            <li><%= link_to "Log out", user_logout_path, :id=>"logout"%></li>
          <% else %>
            <li><%= link_to "Log In", "#", :id=>"login"%></li>
            <li><%= link_to "Sign Up", "#", :id=>"signup"%></li>
          <% end %>
          </ul>
        </div>
    </div>
</div>

<% unless flash.blank? %>
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> fade in">
      <button class="close" data-dismiss="alert">Ã—</button>
      <%= message %>
    </div>
  <% end %>
<% end %>
<%= yield %>

</body>
</html>
